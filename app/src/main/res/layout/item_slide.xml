<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_275">

    <ImageView
        android:id="@+id/slide_image_view"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:scaleType="centerCrop"
        android:src="@color/color_dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/youtube_image_view"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/ic_youtube"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/slide_image_view"
        app:layout_constraintEnd_toEndOf="@+id/slide_image_view"
        app:layout_constraintStart_toStartOf="@+id/slide_image_view"
        app:layout_constraintTop_toTopOf="@+id/slide_image_view" />

    <ImageView
        android:id="@+id/bg_image_view"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/slide_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gradient_bg" />

    <TextView
        android:gravity="bottom"
        android:id="@+id/text_title_slide"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="@string/app_name"
        android:fontFamily="@font/ptfr"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_22"
        app:layout_constraintBottom_toBottomOf="@+id/bg_image_view"
        app:layout_constraintEnd_toEndOf="@+id/bg_image_view"
        app:layout_constraintStart_toStartOf="@+id/bg_image_view"
        app:layout_constraintTop_toTopOf="@+id/bg_image_view" />
</androidx.constraintlayout.widget.ConstraintLayout>
